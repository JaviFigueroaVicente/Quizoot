{
    "version": 2,
    "builds": [
        {
            "src": "public/index.php",
            "use": "vercel-php",
            "config": {
                "excludeFiles": [
                    "node_modules/**"
                ]
            }
        }
    ],
    "routes": [
        {
            "handle": "filesystem"
        },
        {
            "src": "/(.*)",
            "dest": "/public/index.php"
        }
    ]
}